# ============================================
# AURA Production Environment Configuration
# ============================================

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_ENGINE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=aura_db
DB_USER=aura_user
DB_PASSWORD=your_secure_password_here

# OR use DATABASE_URI directly (uncomment if using external PostgreSQL)
# DATABASE_URI=postgresql://aura_user:your_password@your-host.com:5432/aura_db

# ============================================
# Security Configuration
# ============================================
SECRET_KEY=your_strong_secret_key_here_min_32_chars

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_MAX_AGE=3600

# ============================================
# WSGI Server Configuration (Gunicorn)
# ============================================
WORKERS=4
THREADS=2
TIMEOUT=60

# ============================================
# Application Configuration
# ============================================
DEBUG=False
TESTING=False

# ============================================
# Email Configuration (Optional - for notifications)
# ============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
