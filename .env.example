# Flask Environment
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URI=mssql+pyodbc://user:password@localhost/AURA_DB?driver=ODBC+Driver+17+for+SQL+Server

# CORS Configuration
# Development: Cho phép localhost
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
# Production - ví dụ:
# CORS_ALLOWED_ORIGINS=https://aura-clinic.com,https://www.aura-clinic.com

# CORS Cache time (seconds)
CORS_MAX_AGE=3600

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_TOKEN_EXPIRES_DAYS=7

# Logging
LOG_LEVEL=INFO

# Frontend API URL (for CORS)
VITE_API_URL=http://localhost:9999/api
# Email Configuration (for email verification, password reset, notifications)
# Gmail SMTP (requires app-specific password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Email account to send from
SENDER_EMAIL=your-email@gmail.com
# For Gmail: Generate app-specific password at https://myaccount.google.com/apppasswords
SENDER_PASSWORD=your-app-password-not-your-google-password

# Frontend URL (used in verification email links)
FRONTEND_URL=http://localhost:5173