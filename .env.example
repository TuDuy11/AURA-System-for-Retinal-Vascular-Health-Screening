# Flask Environment
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URI=mssql+pyodbc://user:password@localhost/AURA_DB?driver=ODBC+Driver+17+for+SQL+Server

# CORS Configuration
# Development: Cho phép localhost
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
# Production - ví dụ:
# CORS_ALLOWED_ORIGINS=https://aura-clinic.com,https://www.aura-clinic.com

# CORS Cache time (seconds)
CORS_MAX_AGE=3600

# JWT Configuration (nếu cần)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
